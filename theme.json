{
  "name": "Compact Collections",
  "description": "Do you have lots of collections? This is what you need. This theme will make collection page more compact",
  "author": "kinix",
  "version": "v1.4",
  "manifest_version": 8,
  "inject": {
    "shared.css": ["SP"]
  },
  "target": "Library",
  "patches": {
    "Columns": {
      "default": "4",
      "type": "slider",
      "values": {
        "2": {
          "columns2.css": ["SP"]
        },
        "3": {
          "columns3.css": ["SP"]
        },
        "4": {
          "columns4.css": ["SP"]
        },
        "5": {
          "columns5.css": ["SP"]
        }
      }
    },
    "Colors": {
      "default": "Color Only",
      "type": "dropdown",
      "values": {
        "Original": {
          "color0.css": ["SP"]
        },
        "Color Only": {
          "color1.css": ["SP"]
        },
        "Performance": {
          "color2.css": ["SP"]
        }
      }
    }
  }
}
